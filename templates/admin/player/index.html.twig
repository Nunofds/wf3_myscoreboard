{% extends 'base.html.twig' %}

{% block title %}Player index{% endblock %}

{% block body %}
    <h1>Player index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Nickname</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td>{{ player.id }}</td>
                <td>{{ player.email }}</td>
                <td>{{ player.nickname }}</td>
                <td>
                    <a href="{{ path('app_admin_player_show', {'id': player.id}) }}" class='btn btn-success'>show</a>
                    <a href="{{ path('app_admin_player_edit', {'id': player.id}) }}" class='btn btn-primary'>edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_player_new') }}" class='btn btn-info'>Create new</a>
{% endblock %}
