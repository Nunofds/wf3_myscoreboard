{% extends 'base.html.twig' %}

{% block title %}Contest index
{% endblock %}

{% block body %}
	<h1>Contest index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>DÃ©but</th>
				<th>Nombre joueurs</th>
				<th>Jeu</th>
				<th>Vainquer</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for contest in contests %}
				<tr>
					<td>{{ contest.id }}</td>
					<td>{{ contest.startDate|date('d/m/Y')}}</td>
					<td>{{ contest.players|length}}</td>
					<td>{{ contest.game.title}}</td>
					<td>{{ contest.winner ? contest.winner.nickname : "" }}</td>
					<td>
						<a href="{{ path('app_admin_contest_show', {'id': contest.id}) }}" class='btn btn-success'>show</a>
						<a href="{{ path('app_admin_contest_edit', {'id': contest.id}) }}" class='btn btn-primary'>edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_admin_contest_new') }}" class='btn btn-info'>Create new</a>
{% endblock %}
