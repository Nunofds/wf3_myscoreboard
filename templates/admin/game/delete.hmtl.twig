{% extends "base.html.twig" %}

{% block body %}

	<h3 class='my-5'>Confirmation de suppression du jeu suivant :</h3>
	<ul class='list-group'>
		<li class='list-group-item'>
			<b>Titre du jeu :
				{{ game2.title }}</b>
		</li>
		<li class='list-group-item'>Nombre de joueurs min :
			{{ game2.minPlayers }}</li>
		<li class='list-group-item'>Nombre de joueurs max :{{ game2.maxPlayers }}</li>
	</ul>

	<form action="" method='post' class='mt-3'>
		<button type='submit' class='btn btn-success mx-3'>Confirmer</button>
		<a href="{{ path('app_admin_game') }}" class='btn btn-danger'>Annuler</a>
	</form>

{% endblock %}
